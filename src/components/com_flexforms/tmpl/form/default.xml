<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_FLEXFORMS_VIEW_FORM_TITLE">
        <message>
            <![CDATA[COM_FLEXFORMS_VIEW_FORM_TITLE_DESC]]>
        </message>
    </layout>

    <!-- Add fields to the request variables for the layout. -->
    <fields name="request">
        <fieldset name="request" >

            <field name="id" type="sql"
                   label="COM_FLEXFORMS_FIELD_SELECT_FORM_LABEL"
                   required="true"
                   description="COM_FLEXFORMS_FIELD_SELECT_FORM_LABEL_DESC"
                   query="SELECT id, title FROM #__flexforms_forms WHERE enabled = 1"
                   key_field="id"
                   value_field="title"
            />
        </fieldset>
    </fields>
</metadata>
